<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mymobkit="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar_actionbar"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:background="@null"
    mymobkit:contentInsetStart="?actionBarInsetStart"
    mymobkit:popupTheme="@style/ActionBarPopupThemeOverlay"
    mymobkit:theme="@style/ActionBarThemeOverlay"
    mymobkit:titleTextAppearance="@style/ActionBar.TitleText">


    <Button
        android:id="@+id/save"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:drawableLeft="@mipmap/ic_save"
        style="@style/ButtonText"
        android:background="@drawable/btn_toolbar"
        android:text="@string/label_dialog_save" />


</android.support.v7.widget.Toolbar>