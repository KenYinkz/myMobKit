<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="oval">
            <solid android:color="#9b7c7c" />
            <stroke android:width="1dp" android:color="#992f2f" />
            <corners android:radius="3dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="20dp" />
        </shape>
    </item>


    <item android:state_checked="true">
        <shape android:shape="oval">
            <gradient android:angle="270" android:endColor="#7232d9" android:startColor="#44d3ef" />
            <stroke android:width="1dp" android:color="#992f2f" />
            <corners android:radius="3dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="20dp" />
        </shape>
    </item>



</selector>